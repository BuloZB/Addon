<!--
    PointerPressed="ForegroundElement_PointerPressed"
    PointerMoved="ForegroundElement_PointerMoved"
    PointerReleased="ForegroundElement_PointerReleased"
-->
<UserControl
    x:Class="Addon.Views.MasterDetailDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Addon.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <ScrollViewer
        Name="ForegroundElement"
        Padding="{StaticResource DetailPageMargin}"
        HorizontalAlignment="Stretch"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
        VerticalScrollMode="Enabled">
        <StackPanel HorizontalAlignment="Stretch">
            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">
                <!--<FontIcon
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="48"
                    Glyph="&#xF000;" />-->
                <TextBlock
                    VerticalAlignment="Center"
                    Style="{ThemeResource TitleTextBlockStyle}"
                    Text="{x:Bind MasterMenuItem.FolderName, Mode=OneWay}" />
            </StackPanel>
            <!--
                {AbsolutePath}, {Title},\{ProjectUrl}, {PreferredReleaseType}Version},
                {CurrentReleaseTypeAndVersion} {IsIgnored}, {GameVersion}, {Status},\r {CurrentDownload}
                {SuggestedDownload}";
            -->

            <StackPanel
                Name="block"
                Padding="0,0,0,0"
                HorizontalAlignment="Stretch">
                <HyperlinkButton Content="{x:Bind MasterMenuItem.ProjectUrl, Mode=OneWay}" NavigateUri="{x:Bind MasterMenuItem.ProjectUrl, Mode=OneWay}" />
                <TextBlock Text="{x:Bind MasterMenuItem.CurrentReleaseTypeAndVersion, Mode=OneWay}" />
                <TextBlock Text="{x:Bind MasterMenuItem.AbsolutePath, Mode=OneWay}" />

                <VariableSizedWrapGrid HorizontalAlignment="Stretch" Orientation="Horizontal">
                    <StackPanel Width="250">
                        <TextBlock
                            Margin="{StaticResource SmallTopMargin}"
                            Style="{StaticResource DetailBodyStyle}"
                            Text="Current Download" />
                        <TextBlock Text="{x:Bind MasterMenuItem.CurrentDownload, Mode=OneWay}" />

                    </StackPanel>
                    <StackPanel>
                        <TextBlock
                            Margin="{StaticResource SmallTopMargin}"
                            Style="{StaticResource DetailBodyStyle}"
                            Text="Suggested Download" />
                        <TextBlock Style="{StaticResource DetailBodyStyle}" Text="{x:Bind MasterMenuItem.SuggestedDownload, Mode=OneWay}" />

                    </StackPanel>
                </VariableSizedWrapGrid>


                <Grid HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="9*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <WebView
                        Height="1000"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        local:MyExtensions.HtmlString="{x:Bind MasterMenuItem.ChangeLog, Mode=OneWay}"
                        DefaultBackgroundColor="Transparent" />
                </Grid>




            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>



